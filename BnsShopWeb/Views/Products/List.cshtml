@using BnsShopWeb.HtmlHelpers

@model ProductsListVM

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="album py-5 bg-light-blue">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model.Products)
        {
          <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

              <div class="card-body">
                <p class="card-text">
                  <p>Название: @Html.DisplayFor(x => item.Title)</p>
                  <p>Тип: @Html.DisplayFor(x => item.Type)</p>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">В корзину</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  </div>
                  <small class="text-muted">@Html.DisplayFor(x => item.Price)руб</small>
                </div>
              </div>
            </div>
          </div>
        }
      </div>
    </div>
  </div>

<div>
    @Html.PageLinks(Model.PagingInfo, x=> Url.Action("List", new {page = x}))
</div>