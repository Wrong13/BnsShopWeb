@model IEnumerable<Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Админ панель</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css"/>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
<p>@Html.ActionLink("Создать","Create")</p>

<table class="table table-borderless table-dark table-striped
 table-hover"> 
    <tr>
        <th>#</th>
        <th>
            Заголовок
        </th>
        <th>
            Тип
        </th>
        <th>
            Цена
        </th>
        <th>
            Действия
        </th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(p=>x.Id)
            </td>
            <td>
                @Html.DisplayFor(p => x.Title)
            </td>
            <td>
                @Html.DisplayFor(p=>x.Type)    
            </td>
            <td>
                @Html.DisplayFor(p=>x.Price)            
            </td>
            <td>
                @Html.ActionLink("Редактировать","Edit", new {id = x.Id})
                @Html.ActionLink("Детальней","Details",new {id = x.Id})
                @Html.ActionLink("Удалить","Delete", new {id = x.Id})
            </td>
        </tr>
    }
</table>
</body>
</html>