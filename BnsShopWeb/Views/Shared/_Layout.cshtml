<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BnsShopWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/BnsShopWeb.styles.css" asp-append-version="true"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>

<style>
    body 
    {
      background: #365fa1;
    }
</style>

<div class="wrap">

    <div class="bblock navigation">
        <ul>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="desktop-outline"></ion-icon>
                    </span>
                    <span class="title">BnsShop</span>
                </a>
            </li>
            <li>
                <a href='@Url.Action("Index","Home")'>
                    <span class="icon">
                        <ion-icon name="home-outline"></ion-icon>
                    </span>
                    <span class="title">Главная</span>
                </a>
            </li>
            <li>
                <a href='@Url.Action("Index","Products")'>
                    <span class="icon">
                        <ion-icon name="apps-outline"></ion-icon>
                    </span>
                    <span class="title">Каталог</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="basket-outline"></ion-icon>
                    </span>
                    <span class="title">Корзина</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon">
                        <ion-icon name="extension-puzzle-outline"></ion-icon>
                    </span>
                    <span class="title">Помощь</span>
                </a>
            </li>
        </ul>
        <div class="toggle"></div>
    </div>

    <div class="bblock">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

<script>
let navigation = document.querySelector('.navigation');
let wrap = document.querySelector('.wrap');
let toggle = document.querySelector('.toggle');
toggle.onclick = function (){
    navigation.classList.toggle('active')
    wrap.classList.toggle('active')
    }
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>