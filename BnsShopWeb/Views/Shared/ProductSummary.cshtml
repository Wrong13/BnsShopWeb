@using Microsoft.AspNetCore.Http.Extensions
@model BnsShopWeb.Models.Product

<div class="col">
            <div class="card shadow-sm">
                @if (Model.ImageData == null)
                {
                   <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                }
                    else
                    {
                        <img class="img-thumbnail" width="150" height="150"
                        src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))"
                        style="width:100%; height:225px;" 
                        />   
                    }

              <div class="card-body">
                <p class="card-text">
                  <p>Название: @Model.Title</p>
                  <p>Тип: @Model.Type</p>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                      @Html.HiddenFor(x=>x.Id)
                      <input type="submit" value="Корзина"/>
                    }
                    <button type="button" class="btn btn-sm btn-outline-secondary">В корзину</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  </div>
                  <small class="text-muted">@Model.Price.ToString("# руб")</small>
                </div>
              </div>
            </div>
          </div>
